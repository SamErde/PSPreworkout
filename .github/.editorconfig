# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Powershell files
[*.{ps1,psd1,psm1}]
indent_size = 4

[*.md]
indent_size = 2

# Data serialization
[*.{json,yaml,yml}]
indent_size = 2
